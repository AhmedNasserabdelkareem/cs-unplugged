      <trans-unit id="8843" identifier="eae410948e5b806365567a752714f68c">
        <source>“total number of dots” and set its value to 0.</source>
        <target>crwdns8843:0crwdne8843:0</target>
        <note>Context: List Item&#13;
XPath: /ul/li/ul/li</note>
      </trans-unit>
      <trans-unit id="8844" identifier="82f736ca72bb82c26d5d59f20f23ea0e">
