      <trans-unit id="15607" identifier="ee5d4901647665ca22708897cf1f07d9">
        <source>What is the algorithm for a binary search? Here is a possible answer:</source>
        <target>crwdns15607:0crwdne15607:0</target>
        <note>Context: Paragraph text&#13;
XPath: /p[27]</note>
      </trans-unit>
      <trans-unit id="15608" identifier="8bec113afed7071db7e210e6e3004dcc">
        <source>Ask to see the middle card</source>
        <target>crwdns15608:0crwdne15608:0</target>
        <note>Context: List Item&#13;
XPath: /ul[3]/li</note>
      </trans-unit>
      <trans-unit id="15609" identifier="628c93017e1c66c57ab5cff3b5f72ff0">
        <source>Repeat until the correct number is found:</source>
        <target>crwdns15609:0crwdne15609:0</target>
