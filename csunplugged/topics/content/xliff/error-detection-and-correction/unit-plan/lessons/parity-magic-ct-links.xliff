      <trans-unit id="10975" identifier="29587245fea6177d2282f2ca4a93001c">
        <source>{panel type=&quot;ct-algorithm&quot; title=&quot;Algorithmic thinking&quot;}</source>
        <target>crwdns10975:0crwdne10975:0</target>
